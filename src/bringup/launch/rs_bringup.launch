<?xml version="1.0" encoding="utf-8"?>

<launch>

  <!-- ===================== -->
  <!-- 1. RealSense Camera -->
  <!-- ===================== -->
  <include file="$(find realsense2_camera)/launch/rs_camera.launch">
  </include>


  <!-- ===================== -->
  <!-- 2. Ball Detection -->
  <!-- ===================== -->
  <node
    pkg="detect_ball"
    type="rs_contour_detection.py"
    name="ball_detector"
    output="screen"
    anonymous="true" />


  <!-- ===================== -->
  <!-- 3. rqt image view -->
  <!-- ===================== -->
  <node
    pkg="rqt_image_view"
    type="rqt_image_view"
    name="image_view"
    output="screen" />


  <!-- ===================== -->
  <!-- 4. Robot velocity controller -->
  <!-- ===================== -->
  <node
    pkg="robot_control"
    type="rs_vel_controller.py"
    name="vel_controller"
    output="screen"
    anonymous="true" />


  <!-- ===================== -->
  <!-- 5. Arduino -->
  <!-- ===================== -->
  <include file="$(find robot_control)/launch/arduino.launch" />

</launch>
