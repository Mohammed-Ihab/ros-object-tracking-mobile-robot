<launch>

    <!-- Custom gazebo arg -->
    <arg name="world" default="empty"/>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    
    <!-- <arg name="world_file" default="$(find robot_description)/worlds/room.world"/> -->
    <arg name="world_file" default="$(find robot_description)/worlds/four_wheel_env.world"/>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_file)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="headless" value="$(arg headless)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="false"/>
    </include>


    <param name="robot_description" command="$(find xacro)/xacro $(find robot_description)/urdf/four_wheel.xacro"/>
    <!--param command="$(find xacro)/xacro $(find rafiq_description)/urdf/four_wheel.xacro" name="robot_description"/-->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model robot" />

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
        <param name="use_gui" value="false"/>
    </node>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen"/>
    

    <arg name="rviz_file" default="$(find robot_description)/rviz/cam.rviz" />

    <!-- Rviz_node -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rviz_file)" />
    <!-- <node name="rviz" pkg="rviz" type="rviz" output="screen"/> -->
    
</launch>